package com.tt24java.api;


import java.util.List;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.tt24java.model.BuildingDTO;
import com.tt24java.service.BuildingService;

@RestController
public class BuildingAPI {
	
	
	private BuildingService buildingService;


	@GetMapping(value="/api/building/")
	public List<BuildingDTO>getBuilding(@RequestParam(name="name")String name){
		List<BuildingDTO>result= buildingService.findAll(name);
		return result;
	}
	
}	


